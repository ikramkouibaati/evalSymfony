{% extends 'back.html.twig' %}

{% block title %}Membre{% endblock %}

{% block bodyback %}
    <h1>Membre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ membre.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ membre.pseudo }}</td>
            </tr>
            <tr>
                <th>Mdp</th>
                <td>{{ membre.mdp }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ membre.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ membre.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ membre.email }}</td>
            </tr>
            <tr>
                <th>Civilite</th>
                <td>{{ membre.civilite }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ membre.getLibelStatusForTableau() }}</td>
            </tr>
            <tr>
                <th>Date_enregistrement</th>
                <td>{{ membre.dateEnregistrement ? membre.dateEnregistrement|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_membre_index') }}" class="btn btn-secondary btnRetour">Retour a la liste</a>
    <br>
    <a href="{{ path('app_membre_edit', {'id': membre.id}) }}" class="btn btn-warning btnModif">Modifier</a>

    {{ include('membre/_delete_form.html.twig') }}
{% endblock %}
